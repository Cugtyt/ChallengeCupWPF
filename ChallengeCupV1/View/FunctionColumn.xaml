<UserControl x:Class="ChallengeCupV1.View.FunctionColumn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChallengeCupV1.View"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <DockPanel Margin="5,5,10,10">
        <Button x:Name="connect" Content="Connect" Width="100" Click="connect_Click"/>
        <Button x:Name="start" Content="Start" Width="100" Click="start_Click"/>
        <Button x:Name="exit" Content="Exit" Width="100" HorizontalAlignment="Right" Click="exit_Click"/>
    </DockPanel>
</UserControl>
