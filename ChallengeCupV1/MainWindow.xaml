<Window x:Class="ChallengeCupV1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChallengeCupV1"
        xmlns:view="clr-namespace:ChallengeCupV1.View"
        xmlns:waveTab="clr-namespace:ChallengeCupV1.View.WaveTab"
        xmlns:data="clr-namespace:ChallengeCupV1.DataSource"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        mc:Ignorable="d"
        Background="SlateGray"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="350" Width="525" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" TabStripPlacement="Left" Margin="1,-1,-1,6">
            <TabControl.Resources>
                <ResourceDictionary Source="View/Resource/TabStyle.xaml"/>
            </TabControl.Resources>
            <TabItem Header="Wave" Name="waveTab">
                <TabItem.Resources>
                    <data:Data x:Key="dataSource"/>
                </TabItem.Resources>
                <Grid>
                    
                    <view:Wave x:Name="wave"/>
                </Grid>
            </TabItem>

            <TabItem Header="Gear" Name="gear"></TabItem>

            <TabItem Header="Status" Name="status"></TabItem>
        </TabControl>
        <view:FunctionColumn Grid.Row="1" Margin="120,0,0,0"/>
    </Grid>
</Window>
